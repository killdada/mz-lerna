{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "dumi dev",
    "docs:build": "dumi build",
    "docs:deploy": "gh-pages -d docs-dist",
    "build": "father-build",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "release": "npm run build && npm publish",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage",
    "clean": "lerna clean -y",
    "publish": "npm run build && lerna publish -m \"chore: publish\"",
    "bootstrap": "lerna bootstrap",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty packages",
    "fix": "eslint --fix --ext .js,.jsx src",
    "init": "rm -rf node_modules && yarn && yarn clean && yarn bootstrap"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.11.0",
    "ant-design-pro": "^2.3.2",
    "antd": "^4.5.1",
    "axios": "^0.19.2",
    "component-cookie": "^1.1.4",
    "flag": "^4.4.0",
    "immutability-helper": "^3.1.1",
    "keymirror": "^0.1.1",
    "moment": "^2.27.0",
    "nprogress": "^0.2.0",
    "object-path": "^0.11.4",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dnd": "^11.1.3",
    "react-dnd-html5-backend": "^11.1.3",
    "react-dom": "^16.13.1",
    "underscore": "^1.10.2"
  },
  "devDependencies": {
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.0.5",
    "babel-eslint": "^10.1.0",
    "babel-plugin-import": "^1.13.0",
    "dumi": "^1.0.9",
    "eslint": "^7.5.0",
    "eslint-config-alloy": "^3.7.4",
    "eslint-plugin-react": "^7.20.5",
    "father-build": "^1.17.2",
    "gh-pages": "^3.0.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.0.7",
    "prettier": "^2.0.5",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "yorkie": "^2.0.0"
  }
}
